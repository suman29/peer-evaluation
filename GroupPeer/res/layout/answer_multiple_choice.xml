<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/answerbg1" >

    <TextView
        android1:id="@+id/textView1"
        android1:layout_width="wrap_content"
        android1:layout_height="100dp"
        android1:layout_alignParentLeft="true"
        android1:layout_alignParentRight="true"
        android1:layout_alignParentTop="true"
        android1:gravity="center"
        android1:text="@string/here_is_your_question"
        android1:textColor="#0b6693"
        android1:textSize="40sp" />

    <RadioGroup
        android1:id="@+id/radioGroup1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_centerHorizontal="true"
        android1:layout_centerVertical="true" >

        <RadioButton
            android1:id="@+id/radio3"
            android1:layout_width="wrap_content"
            android1:layout_height="40dp"
            android1:gravity="center"
            android1:text="option3"
            android1:textColor="#4bb498"
            android1:textSize="20sp" />

        <RadioButton
            android1:id="@+id/radio2"
            android1:layout_width="wrap_content"
            android1:layout_height="40dp"
            android1:layout_marginRight="166dp"
            android1:gravity="center"
            android1:text="option2"
            android1:textColor="#4bb498"
            android1:textSize="20sp" />

        <RadioButton
            android1:id="@+id/radio4"
            android1:layout_width="wrap_content"
            android1:layout_height="40dp"
            android1:gravity="center"
            android1:text="option4"
            android1:textColor="#4bb498"
            android1:textSize="20sp" />

        <RadioButton
            android1:id="@+id/radio1"
            android1:layout_width="wrap_content"
            android1:layout_height="40dp"
            android1:gravity="center"
            android1:text="option1"
            android1:textColor="#4bb498"
            android1:textSize="20sp" />

    </RadioGroup>

    <Button
        android1:id="@+id/submit"
        android1:layout_width="100dp"
        android1:layout_height="50dp"
        android1:layout_alignLeft="@+id/radioGroup1"
        android1:layout_alignRight="@+id/radioGroup1"
        android1:layout_below="@+id/radioGroup1"
        android1:layout_marginTop="29dp"
        android1:background="@drawable/draw"
        android1:text="@string/submit"
        android1:textColor="#ffffff" />

    <TextView
        android1:id="@+id/textView2"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentBottom="true"
        android1:layout_alignParentLeft="true"
        android1:layout_alignParentRight="true"
        android1:layout_below="@+id/submit"
        android1:gravity="center"
        android1:textSize="30dp"
        android1:text="TextView" />

</RelativeLayout>